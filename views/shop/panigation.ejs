<% if (pages > 0) { %>
<div class="row ml-5" style="margin-top:30px">
<div class="col-4 offset-md-4">
                <ul class="pagination text-center">
                    <% if (current == 1) { %>
                        <li class="page-item disabled" style="margin-right:5px"><a class="page-link">First</a></li>
                    <% } else { %>
                        <li class="page-item " style="margin-right:5px"><a class="page-link" href="/shop/?page=1">First</a></li>
                    <% } %>
                    <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                    <% if (i !== 1) { %>
                    <li class="page-item disabled" style="margin-right:5px"><a class="page-link">... </a></li>
                    <% } %>
                    <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                        <% if (i == current) { %>
                            <li class="page-item active" style="margin-right:5px"><a class="page-link"><%= i %></a></li>
                        <% } else { %>
                            <li class="page-item" style="margin-right:5px"><a class="page-link" href="/shop/?page=<%= i %>"><%= i %></a></li>
                        <% } %>
                        <% if (i == Number(current) + 4 && i < pages) { %>
                            <li class="disabled page-item" style="margin-right:5px"><a class="page-link>...</a></li>
                        <% } %>
                    <% } %>
                    <% if (current == pages) { %>
                        <li class="disabled page-item" style="margin-right:5px"><a class="page-link">Last</a></li>
                    <% } else { %>
                        <li class="page-item" style="margin-right:5px"> <a class="page-link" href="/shop/?page=<%= pages %>">Last</a></li>
                    <% } %>
                </ul>
            </div>    
      </div>    
            <% } %>