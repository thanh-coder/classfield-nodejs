<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
      
        <% if (noMessage) {%> 
        <div  id="charge-error" class="alert alert-success hidden" style="display:none">
         </div>
       <% } else {  %>
       <div  id="charge-error" class="alert alert-danger hidden" style="">
       <%= successMsg %>
       </div>
       
         <% } %>
    </div>
</div>

<div class="d-flex align-items-center" style="margin-top:60px">
    <form class="" action="/shop/search" style="margin-left:auto;display:flex" method="GET">
        <input class="form-control" type="text" name="q" style="width: 266px;">
        <button class="btn btn-primary ml-2" >Search</button>
    </form>
</div>
<% products.forEach(function(product){ %>
     <div class="row" style="margin-top: 20px;margin-bottom:20px">
      <% product.forEach(function(item){ %>

        <div class="col-sm-6 col-md-4" style="">
        <div class="thumbnail" style="display: flex;
        flex-direction: column;
        align-items: center;
        border: 1px solid #ddd;box-shadow: 0 0 5px 5px #ddd">
                <img src="<%= item.imagePath %>" alt="..." class="img-responsive shop-img" style="">
                <div class="caption" style="margin-top: 22px;"> 
                    <h3 style=""><%= item.title %></h3>
                    <p class="description" style=""><%= item.description %></p>
                    <div class="clearfix" style="display: flex;
                    align-items: center;
                    padding: 5px;">
                        <div class="price pull-left" style="flex-grow:1">$<%= item.price %></div>
                        <a href="/shop/add/<%= item._id %>" class="btn btn-success pull-right" role="button" style=""> Add to cart</a>
                    </div>
                </div>
            </div>
    </div>

    <% }) %>
    </div>
<% }) %>
<% include ./panigation %>


